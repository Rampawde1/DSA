class Solution {
    public ListNode reverseList(ListNode head) {
      if(head == null){
          return null;
      }  
        helper(head);
        head.next = null;
        return nhead;
    }
    ListNode nhead;
    
    void helper(ListNode node){
        if(node.next == null){
            nhead = node;
            return;
        }
        helper(node.next);
        node.next.next = node;
    }
}
